<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="555.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diegoauyon.controller.FacturaController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Modulos">
               <items>
            <MenuItem mnemonicParsing="false" onAction="#menuPrincipal" text="Menu principal" />
               </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Reportes">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Ayuda">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="592.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
         <children>
            <Label alignment="CENTER" layoutX="209.0" layoutY="29.0" prefHeight="43.0" prefWidth="223.0" text="Factura">
               <font>
                  <Font name="Century Gothic" size="24.0" />
               </font>
            </Label>
            <VBox layoutX="106.0" layoutY="83.0" prefHeight="183.0" prefWidth="100.0">
               <children>
                  <Label prefHeight="37.0" prefWidth="100.0" text="Cliente" />
                  <Label prefHeight="37.0" prefWidth="100.0" text="Estado" />
                  <Label prefHeight="37.0" prefWidth="100.0" text="Nit" />
                  <Label layoutX="10.0" layoutY="100.0" prefHeight="37.0" prefWidth="100.0" text="Fecha" />
               </children>
            </VBox>
            <VBox layoutX="267.0" layoutY="83.0" prefHeight="183.0" prefWidth="268.0">
               <children>
                  <ComboBox fx:id="cmbCliente" disable="true" prefWidth="150.0" promptText="Codigo cliente">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </ComboBox>
                  <TextField fx:id="txtEstado" editable="false" promptText="Ingrese la estado de la factura">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="txtNit" editable="false" promptText="Ingrese el nit">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <DatePicker fx:id="dateFecha" editable="false">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </DatePicker>
               </children>
            </VBox>
            <TableView fx:id="tblFactura" layoutX="56.0" layoutY="268.0" onKeyReleased="#seleccionarElemento" onMouseClicked="#seleccionarElemento" prefHeight="183.0" prefWidth="529.0">
              <columns>
                <TableColumn fx:id="colCodigo" text="Codigo" />
                <TableColumn fx:id="colEstado" minWidth="136.0" prefWidth="150.0" text="Estado" />
                  <TableColumn fx:id="colNit" prefWidth="100.0" text="Nit" />
                  <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
                  <TableColumn fx:id="colFecha" minWidth="100.0" prefWidth="-1.0" text="Fecha" />
              </columns>
            </TableView>
            <HBox layoutX="245.0" layoutY="467.0" prefHeight="43.0" prefWidth="340.0">
               <children>
                  <Button fx:id="btnNuevo" mnemonicParsing="false" onAction="#nuevo" prefHeight="40.0" prefWidth="80.0" text="Nuevo">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminar" prefHeight="40.0" prefWidth="80.0" text="Eliminar">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editar" prefHeight="40.0" prefWidth="80.0" text="Editar">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnReporte" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" text="Reporte">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
    </AnchorPane>
  </children>
</VBox>
